{
  "name": "Morphlink",
  "description": "Morphlink is a simple browser extension that allows you to quickly grab the URL from your current tab and open it in a new tab on your localhost. You can also create customized matching options with regex that meet your specific needs.",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": "assets/images/icon-128.png"
  },
  "icons": {
    "16": "assets/images/icon-16.png",
    "32": "assets/images/icon-32.png",
    "48": "assets/images/icon-48.png",
    "128": "assets/images/icon-128.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "commands"
  ],
  "commands": {
    "localhost": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "Command+Shift+L"
      },
      "description": "Open current tab in localhost mode"
    },
    "regex-0": {
      "description": "Run 1st custom regex command"
    },
    "regex-1": {
      "description": "Run 2nd custom regex command"
    },
    "regex-2": {
      "description": "Run 3rd custom regex command"
    }
  },
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "options_ui": {
    "page": "src/options/options.html",
    "open_in_tab": false
  }
}
